<link href="~/lib/plugins/cropper/cropper.min.css" rel="stylesheet" />
<link href="~/lib/plugins/cropper/sitelogo.css" rel="stylesheet" />
<script src="~/lib/plugins/cropper/cropper.js"></script>
<script src="~/lib/plugins/cropper/sitelogo.js"></script>
<div class="modal-body" id="crop-avatar">
    <div class="avatar-view" title="Change the avatar" style="display: none">
        <img src="~/css/user/avatar.jpg" alt="Avatar">
    </div>
    <form>
        <div class="modal-body" id="avatar-modal">
            <div class="avatar-body avatar-form">
                <div class="avatar-upload">
                    <input class="avatar-src" name="avatar_src" type="hidden">
                    <input class="avatar-data" name="avatar_data" type="hidden">
                    <button class="btn btn-flat eip-btn fa fa-search" type="button" data-toggle="tooltip" title="请选择图片" onclick="$('input[id=avatarInput]').click();">请选择图片</button>
                    <span id="avatar-name"></span>
                    <input class="avatar-input hide" id="avatarInput" name="avatar_file" type="file">
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="avatar-wrapper"></div>
                    </div>
                    <div class="col-md-3">
                        <div class="avatar-preview preview-lg" id="imageHead"></div>
                        <div class="avatar-preview preview-md"></div>
                        <div class="avatar-preview preview-sm"></div>
                    </div>
                </div>
                <div class="row avatar-btns">
                    <div class="col-md-4">
                        <div class="btn-group">
                            <button class="btn btn-flat eip-btn fa fa-undo" data-method="rotate" data-toggle="tooltip" data-option="-90" type="button" title="向左旋转"> 向左旋转</button>
                        </div>
                        <div class="btn-group">
                            <button class="btn  btn-flat eip-btn fa fa-repeat" data-method="rotate" data-toggle="tooltip" data-option="90" type="button" title="向右旋转"> 向右旋转</button>
                        </div>
                    </div>
                    <div class="col-md-5" style="text-align: right;">
                        <button class="btn btn-flat eip-btn  fa fa-arrows" data-toggle="tooltip" data-method="setDragMode" data-option="move" type="button" title="移动">
                            <span  data-original-title="$().cropper(&quot;setDragMode&quot;, &quot;move&quot;)">
                            </span>
                        </button>

                        <button type="button" class="btn btn-flat eip-btn fa fa-search-plus" data-toggle="tooltip" data-method="zoom" data-option="0.1" title="放大图片">
                            <span  data-original-title="$().cropper(&quot;zoom&quot;, 0.1)">
                                <!--<span class="fa fa-search-plus"></span>-->
                            </span>
                        </button>
                        <button type="button" class="btn btn-flat eip-btn fa fa-search-minus" data-toggle="tooltip" data-method="zoom" data-option="-0.1" title="缩小图片">
                            <span  data-original-title="$().cropper(&quot;zoom&quot;, -0.1)">
                                <!--<span class="fa fa-search-minus"></span>-->
                            </span>
                        </button>
                        <button type="button" class="btn btn-flat eip-btn fa fa-refresh" data-toggle="tooltip" data-method="reset" title="重置图片">
                            <span  data-original-title="$().cropper(&quot;reset&quot;)" aria-describedby="tooltip866214" />
                        </button>
                    </div>

                </div>
            </div>
        </div>
        <div class="box-footer text-right">
            <button type="button" class="btn btn-success" data-toggle="tooltip" title="确定" id="headImageSubmit" data-btn-type="save"><span class="bootstrap-dialog-button-icon fa fa-check"></span>确定</button>
            <button type="button" class="btn btn-danger" data-toggle="tooltip" title="取消" data-btn-type="cancel" data-dismiss="modal"><span class="bootstrap-dialog-button-icon fa fa-times"></span>取消</button>
        </div>
    </form>
</div>
<div id="page-wrapper">
    <div class="loading" aria-label="Loading" role="img" tabindex="-1"></div>
</div>
<script src="~/lib/plugins/cropper/html2canvas.min.js"></script>
<script src="~/app/system/user/headimage.js"></script>
